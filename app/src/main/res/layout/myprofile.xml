<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3_groopr">


    <TextView
        android:id="@+id/MyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/MyProfile2"
        app:layout_constraintStart_toStartOf="@+id/MyProfile2" />

    <TextView
        android:id="@+id/MyProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:text="View and edit your details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userImageProfile"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_border"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyProfile2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Norman Lee \n @norml"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/userImageProfile"
        app:layout_constraintStart_toStartOf="@+id/userImageProfile"
        app:layout_constraintTop_toBottomOf="@+id/userImageProfile" />


    <EditText
        android:id="@+id/aboutYouProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_border"
        android:backgroundTint="@color/black"
        android:contentDescription="@null"
        android:hint="Likes SUTD canteen"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/AboutYouHeader"
        app:layout_constraintTop_toBottomOf="@+id/AboutYouHeader" />

    <TextView
        android:id="@+id/AboutYouHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:text="About You"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/skillSetProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_border"
        android:backgroundTint="@color/black"
        android:hint="Firebase, JetPack"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/YourSkillsHeader"
        app:layout_constraintTop_toBottomOf="@+id/YourSkillsHeader" />

    <TextView
        android:id="@+id/YourSkillsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your Skills"
        app:layout_constraintStart_toStartOf="@+id/aboutYouProfile"
        app:layout_constraintTop_toBottomOf="@+id/aboutYouProfile" />

    <EditText
        android:id="@+id/emailInputProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/text_border"
        android:backgroundTint="@color/black"
        android:hint="ho_lee_fuk@mymail.sutd.edu.sg"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/EmailHeader"
        app:layout_constraintTop_toBottomOf="@+id/EmailHeader" />

    <TextView
        android:id="@+id/EmailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="@+id/skillSetProfile"
        app:layout_constraintTop_toBottomOf="@+id/skillSetProfile" />

    <EditText
        android:id="@+id/inputIdProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_border"
        android:backgroundTint="@color/black"
        android:hint="1001234"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/IDHeader"
        app:layout_constraintTop_toBottomOf="@+id/IDHeader" />

    <TextView
        android:id="@+id/IDHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Student ID"
        app:layout_constraintStart_toStartOf="@+id/emailInputProfile"
        app:layout_constraintTop_toBottomOf="@+id/emailInputProfile" />

    <Button
        android:id="@+id/profileButtonFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:backgroundTint="@color/orangeApp"
        android:text="Update Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>