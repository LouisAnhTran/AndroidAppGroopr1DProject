<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg3_groopr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/module4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins"
        android:text="50.001 Introduction to Information Systems"
        android:textColor="#BD7000"
        app:layout_constraintEnd_toEndOf="@+id/module3Button"
        app:layout_constraintStart_toStartOf="@+id/module3Button"
        app:layout_constraintTop_toBottomOf="@+id/module3" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="219dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:text="My Groups"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_light"
        android:text="Groups you are currently in for all your modules"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#707070"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_edit"
        android:drawableEnd="@drawable/add_symbol"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Create your own group"
        android:textColor="#ECBC76"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/module1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins"
        android:text="50.001 Introduction to Information Systems"
        android:textColor="#BD7000"
        app:layout_constraintEnd_toEndOf="@+id/createGroupButton"
        app:layout_constraintTop_toBottomOf="@+id/createGroupButton" />

    <Button
        android:id="@+id/module1Button"
        android:layout_width="304dp"
        android:layout_height="68dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/module1"
        app:layout_constraintStart_toStartOf="@+id/module1"
        app:layout_constraintTop_toBottomOf="@+id/module1" />

    <TextView
        android:id="@+id/module2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/poppins"
        android:text="50.001 Introduction to Information Systems"
        android:textColor="#BD7000"
        app:layout_constraintEnd_toEndOf="@+id/module1Button"
        app:layout_constraintStart_toStartOf="@+id/module1Button"
        app:layout_constraintTop_toBottomOf="@+id/module1" />

    <Button
        android:id="@+id/module2Button"
        android:layout_width="299dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/module2"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/module2"
        app:layout_constraintTop_toBottomOf="@+id/module2" />

    <TextView
        android:id="@+id/module3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/poppins"
        android:text="50.001 Introduction to Information Systems"
        android:textColor="#BD7000"
        app:layout_constraintEnd_toEndOf="@+id/module2Button"
        app:layout_constraintStart_toStartOf="@+id/module2Button"
        app:layout_constraintTop_toBottomOf="@+id/module2" />

    <Button
        android:id="@+id/module3Button"
        android:layout_width="302dp"
        android:layout_height="73dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/module3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/module3"
        app:layout_constraintTop_toBottomOf="@+id/module3" />

    <Button
        android:id="@+id/module4Button"
        android:layout_width="306dp"
        android:layout_height="70dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/module4"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/module4"
        app:layout_constraintTop_toBottomOf="@+id/module4" />
</androidx.constraintlayout.widget.ConstraintLayout>