<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3_groopr">

    <TextView
        android:id="@+id/ManageGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:text="Manage Groups"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/YouAreAdmin"
        android:layout_width="218dp"
        android:layout_height="49dp"

        android:text="You can only edit group if you are an admin."
        app:layout_constraintEnd_toEndOf="@+id/ManageGroups"
        app:layout_constraintStart_toStartOf="@+id/ManageGroups"
        app:layout_constraintTop_toBottomOf="@+id/ManageGroups" />

    <Button
        android:id="@+id/EditButton"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/orangeApp"
        android:layout_marginRight="50dp"
        android:text="Edit Group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/LeaveButton"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/orangeApp"
        android:layout_marginLeft="50dp"
        android:text="Leave Group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/ClothesIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/red_border"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clothes" />


    <TextView
        android:id="@+id/GroupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:text="Group 1. \n 50.001 Introduction to Information Systems."
        app:layout_constraintEnd_toEndOf="@+id/ClothesIcon"
        app:layout_constraintStart_toStartOf="@+id/ClothesIcon"
        app:layout_constraintTop_toBottomOf="@+id/ClothesIcon" />

    <TextView
        android:id="@+id/GroupDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:text="Seeking bottoms in SUTD Capstone."
        app:layout_constraintEnd_toEndOf="@+id/ClothesIcon"
        app:layout_constraintStart_toStartOf="@+id/ClothesIcon"
        app:layout_constraintTop_toBottomOf="@+id/GroupTitle" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="286dp">

        <ImageView
            android:id="@+id/Tele1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop=""
            android:background="@drawable/red_border"
            android:clipToOutline="true"
            app:srcCompat="@drawable/clothes" />

        <ImageView
            android:id="@+id/Tele2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop=""
            android:background="@drawable/red_border"
            android:clipToOutline="true"
            app:srcCompat="@drawable/clothes" />

        <ImageView
            android:id="@+id/Tele3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop=""
            android:background="@drawable/red_border"
            android:clipToOutline="true"
            app:srcCompat="@drawable/clothes" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>